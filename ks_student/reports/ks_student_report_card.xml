<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <template id="ks_student_report_card">
    <t t-call="web.html_container">
      <t t-call="web.external_layout">
        <div class="page">
          <div class="oe_structure"/>
          <h2 class="text-center">Student Report Card</h2>
          <t t-foreach="docs" t-as="o">
          <t t-foreach="o.ks_stu_name" t-as="student">
          <br/>
            <table class="table table-custom table-condensed">
              <tr class="table-inner">
                <th class="table-inner"><strong>Student Name</strong></th>
                <th class="table-inner"><strong>Class Name</strong></th>
                <th class="table-inner"><strong>Exam Name</strong></th>
              </tr>
                <tr class="table-inner">
                    <t t-debug="pdb"/>
<!--                  <th class="table-inner"><strong t-field="e"/></th>-->
                  <t t-foreach="o.ks_student_details(student)"
                      t-as="item">
                    <th class="table-inner"><t t-esc="item"/></th>
                  </t>
                </tr>
            </table>
              <br/>
              <br/>
            <table class="table table-custom table-condensed">
                <tr>
                    <th class="table-inner"><strong>Subject</strong></th>
                    <th class="table-inner"><strong>Obtained Marks</strong></th>
                    <th class="table-inner"><strong>Max Marks</strong></th>
                </tr>
<!--               for employee wise table Info-->
              <t t-foreach="o.ks_list_of_subject(student)" t-as="e">
                <tr class="table-inner">
<!--                  <th class="table-inner"><strong t-field="e.ks_exam_id"/></th>-->
                  <t t-foreach="o.ks_subject_details(e,student)"
                      t-as="item">
                    <th class="table-inner"><t t-esc="item"/></th>
                  </t>
                </tr>
              </t>
            </table>
          </t>
          </t>
        </div>
      </t>
    </t>
  </template>
</odoo>
