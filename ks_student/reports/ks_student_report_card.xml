<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <template id="ks_student_report_card">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                   <div class="page">
                       <center>
                           <h2>Student Report Card</h2>
                       </center>
                       <br></br>
                       <br></br>
                       <br></br>
                       <table class="table table-sm o_main_table" style="width:100%" border="1">
                           <thead>
                              <tr>
                                  <th>Name</th>
                                  <th>Subject</th>
                                  <th>Class</th>
                                  <th>Obtain Marks</th>
                              </tr>
                           </thead>
                           <tbody class="table table-sm">
                              <tr>
                                  <td><span t-esc="doc.name"/></td>
                                  <td><span t-esc="doc.ks_exam_id.display_name"/></td>
                                  <td><span t-esc="doc.ks_student_class_id.display_name"/></td>
                                  <td><span t-esc="doc.ks_obtained_marks"/></td>
                              </tr>
                           </tbody>
                       </table>

                     </div>
                </t>
            </t>
        </t>
    </template>

</odoo>